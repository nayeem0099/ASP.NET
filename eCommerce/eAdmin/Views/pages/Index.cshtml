@model IEnumerable<eAdmin.Models.page>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="container-fluid">
        <div class="pull-right">
            <a data-original-title="Add New User"
               href="@Url.Action("Create")"
               data-toggle="tooltip" title="" class="btn btn-primary">
                <i class="fa fa-plus"></i>
            </a>

        </div>
        <h1>Users</h1>
        <ul class="breadcrumb">
            <li>@Html.ActionLink("Dashboard", "dashboard")</li>
            <li>@Html.ActionLink("Menu", "Index")</li>
        </ul>
    </div>
</div>
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-list"></i>Menu List
            </h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive" style="overflow-x: visible;">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.C_sort)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.topic)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.parent_id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.background_color)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.body_sort)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.image)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.C_sort)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.topic)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.parent_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.background_color)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.body_sort)
                            </td>
                            
                            <td>
                                <a data-original-title="Edit"
                                   data-toggle="tooltip" title="" class="btn btn-primary"
                                   href="@Url.Action("Edit",new { id = item.id })">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a data-original-title="Details"
                                   data-toggle="tooltip" title="" class="btn btn-primary"
                                   href="@Url.Action("Details", new { id = item.id })">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a data-original-title="Delete"
                                   data-toggle="tooltip" title="" class="btn btn-danger"
                                   href="@Url.Action("Delete", new { id = item.id })">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
        </div>
    </div>
